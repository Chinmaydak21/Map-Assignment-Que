class Solution {
public:

    unordered_map<int,int> m ;

    int count( int x ){
        if( m[x] > 1 ) return m[x] ;
        if( !m[x] ) return  0 ;
        m[x] = 1 + count(x+1) ;
        return m[x] ;
    }

    int longestConsecutive(vector<int>& nums) {
        int ans =  0 ;
        for( auto x : nums ) m[x] = 1;
        for( auto x : nums ) ans = max( ans , count(x) );
        return ans ;
    }
};
